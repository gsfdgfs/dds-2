#include<stdio.h>
  int main(){
  int n;
  printf("enter the size of array:");
  scanf("%d", &n);
  int *arr = (int*)malloc(n*sizeof(int));
  for (int i = 0; i<n; i++){
    printf("enter the array [%d] index:" ,i);
    scanf("%d", & arr[i]);
  }
  printf("\null value of array:");
  for (int i = 0; i<n; i++){
    printf("%d\n", arr[i]);
  }
  return 0;
}
